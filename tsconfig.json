{
   "compilerOptions": {
      "lib": [
         "es5",
         "dom" 
      ],
      "skipLibCheck": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "types": [
         "reflect-metadata"
      ],
   },  
   "exclude": ["./node_modules"]
}